{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "target": "es2019",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["src/client/*"],
      "@util/*": ["src/util/*"],
      "@event/*": ["src/event/*"],
      "@command/*": ["src/command/*"],
      "@events/*": ["data/events/*"],
      "@commands/*": ["data/commands/*"],
      "@discord/*": ["src/discord/*"],
      "@structures/*": ["src/structures/*"],
      "@handlers/*": ["src/handlers/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,

  },
  "exclude": [
    "node_modules"
  ]
}
