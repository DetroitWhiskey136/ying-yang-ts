{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "target": "es2019",
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
    },
    "resolveJsonModule": true,
    "rootDirs": ["src", "dist/src"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules"
  ],

  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "entryPointStrategy": ["Resolve"],
    "out": "docs",
    "name": "Yin Yang TS Documentation",
    "excludePrivate": true,
    "excludeInternal": true,
    "includeVersion": true,
    "disableSources": true,
    "readme": "none",
    "defaultCategory": "Misc",
    "hideGenerator": true,
    "validation": {
      "invalidLink": true,
    },
    "customCss": "./data/resources/docs.css",
    "emit": true,
    "theme": "default",
    "darkHighlightTheme": "material-darker",
  }
}
